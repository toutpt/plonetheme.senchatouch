<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plonetheme.senchatouch">

    <configlet
        title="Sencha Touch Theme settings"
        action_id="plonetheme.senchatouch.themesettings"
        appId="plonetheme.senchatouch"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@plonetheme-senchatouch-controlpanel"
        icon_expr="string:${portal_url}/++resource++senchatouch/touch_icon.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
